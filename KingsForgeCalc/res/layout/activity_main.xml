<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" 
        >
        
        <EditText
            android:id="@+id/craft_black0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff000000"
            android:hint="@string/none"
            android:inputType="number"
            android:textColor="#ffffffff" />

        <EditText
            android:id="@+id/craft_black1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff000000"
            android:hint="@string/none"
            android:inputType="number"
            android:textColor="#ffffffff" />
        
        <EditText
            android:id="@+id/craft_green0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff00ff00"
            android:hint="@string/none"
            android:inputType="number"
            android:textColor="#ffffffff" />
        
        <EditText
            android:id="@+id/craft_green1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff00ff00"
            android:hint="@string/none"
            android:inputType="number"
            android:textColor="#ffffffff" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity" >

        <EditText
            android:id="@+id/supply_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff000000"
            android:hint="@string/supply_black"
            android:inputType="number"
            android:textColor="#ffffffff" />

        <EditText
            android:id="@+id/supply_green"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff00ff00"
            android:hint="@string/supply_green"
            android:inputType="number"
            android:textAlignment="4"
            android:textColor="#ffffffff" />

        <EditText
            android:id="@+id/supply_red"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffff0000"
            android:hint="@string/supply_red"
            android:inputType="number"
            android:textColor="#ffffffff" />

        <EditText
            android:id="@+id/supply_blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff0000ff"
            android:hint="@string/supply_blue"
            android:inputType="number"
            android:textColor="#ffffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="doRollout"
            android:text="@string/button_roll" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity" >
        
        <TextView
            android:id="@+id/rollout_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />
        
    </LinearLayout>
        
    
</LinearLayout>
